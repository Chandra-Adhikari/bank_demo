<section class="content-header">
    <h1> New Transaction</h1>
</section>
  <section class="content">
    <div class="box box-info">
    <div class="box-body">
     
        <div class="tab-content">
  				<div class="tab-pane fade active in" id="default-tab-1">
  					<div class="tab-pane">
  							<%= form_for @transaction, as: :transaction, url: transactions_path, html: { class: "new_transaction", id: "new_transaction" } do |f|%>

  								<div class="detail-form m-t-40 m-b-40">

  									<div class="form-group">
  										<div class="row">
  											<label class="col-sm-2 col-md-2 control-label">Transaction Type</label>
  											<div class="col-sm-8 col-md-8">
                        <%= f.select(:transaction_type, [ 'Credit', 'Debit' ], {}, { :class => 'select' }) %>  											</div>
  										</div>
  									</div>

                    <div class="form-group">
                      <div class="row">
                        <label class="col-sm-2 col-md-2 control-label">Amount</label>
                        <div class="col-sm-8 col-md-8">
                          <%= f.text_field :amount, class: "form-control", required: true, placeholder: "" %>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
  										<div class="text-center attendee-cent-s">
  											<button class="btn btn-default btn-green" type="submit">Submit</button>
                      </div>
									  </div>
								</div>
							<%end%>
						</div>
  				</div>
        </div>
      
      </div>
    </div>
  </section>
